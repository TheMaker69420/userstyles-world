/* ==UserStyle==
@name           Opal Theme for Gemini (Blue)
@namespace      https://github.com/TheMaker69420/userstyle-bloat-removal
@version        1.0.0
@description    Based on a cool blue theme I got on one of my Opal gems. Probably not doing any other colors, even though it would be pretty easy to.
@author         TheMaker42/TheMaker69420
==/UserStyle== */

@-moz-document domain("gemini.google.com") {
  	/*Home Menu*/
	/*Home menu color*/
	:root :where(.theme-host):where(.zero-state-theme) {
	--bard-color-synthetic--chat-window-surface: #004e5d;
}
	/*Sidebar*/
	:where(.theme-host):where(.dark-theme) {
	--gem-sys-color--surface-container: #002830;
}
	/*Upgrade buttons (void if using comparison Bloat Remover theme)*/
	:where(.theme-host):where(.dark-theme) button[mat-flat-button].gds-upsell-button {
  --mat-button-filled-container-color: #002830;
	}

	/*Home menu text (Hi [user])*/
	h1[_ngcontent-ng-c2751595541] {
  color: #55d3f3;
	}
	bard-sidenav-content[_ngcontent-ng-c1217087270] {
  color: #55d3f3;
	}
	.bard-text.enable-aurora[_ngcontent-ng-c1291545120] {
  color: #55d3f3;
	}
	/*Input bar and suggestion buttons (void if using comparison Bloat Remover theme)*/
	:where(.theme-host):where(.dark-theme) {
	--gem-sys-color--surface-bright: #002830;
	--gem-sys-color--surface-container-low: #002830;
	--gem-sys-color--surface-container-lowest: #002830;
	}
	/*Model Picker*/
	:root :where(.theme-host):where(.zero-state-theme) {
	--bard-color-synthetic--mat-card-background: #002830;
}
}
@-moz-document url-prefix("https://gemini.google.com/u/1/app/") {
	/*Chat pages*/
	/*Chat page color*/
	/*Background*/
	:root :where(.theme-host) {
  --bard-color-synthetic--chat-window-surface: #004e5d;
	}
	/*Chat bubbles*/
	/*User*/
.user-query-bubble-with-background[_ngcontent-ng-c1622755516]:not(.edit-mode) {
	background: #002830;
	border-radius: 24px var(--gem-sys-shape--corner-extra-small) 24px 24px;
	max-width: calc(476px - var(--gem-sys-spacing--m)*2);
}
	/*AI*/
	:where(.theme-host):where(.dark-theme) {
	--gem-sys-color--on-surface: #fff;
	--gem-sys-color--surface: #00283000;
	}
	/*Code blocks*/
	.markdown[_ngcontent-ng-c1532857962] code {
	background-color: #002830;
	}
	/*Input bar*/
	:where(.theme-host):where(.dark-theme) {
	--gem-sys-color--surface-bright: #002830;
	}
	/*Horizontal wrappers and blockquotes*/
	:where(.theme-host):where(.dark-theme) {
  --gem-sys-color--outline-variant: #002830;
	}
}

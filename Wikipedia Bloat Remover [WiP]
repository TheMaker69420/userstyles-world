@-moz-document url-prefix("https://en.wikipedia.org") {
/* "Wikipedia is human" fundraising */
	#centralNotice {
	display:
		none !important
	}
}
/*Donate, account creating and login buttons*/
#p-vector-user-menu-overflow > div:nth-child(1) {
	display:
		none !important
}

/*Tweaks*/
/*Border colors same as page (dark mode only)*/
@media screen {
  html.skin-theme-clientpref-night {
    color-scheme: dark;
    --background-color-neutral-subtle: #101418;
	}
/*Better link colors (dark mode only)*/
	/*Visited*/
	@media screen {
  html.skin-theme-clientpref-night {
    color-scheme: dark;
    --color-visited: #a3c3e9;
}
	/*New*/
@media screen {
  html.skin-theme-clientpref-night {
    color-scheme: dark;
    --color-base: #eaecf0;
    --color-progressive: #5e9de9;
	}
		}
	}
}
